             label="%FordiacPreferencePage_LABEL_BoolConnectorColor"
             value="159, 164, 138">
       </colorDefinition>
       <colorDefinition
             categoryId="org.eclipse.fordiac.ide.themeCategory"
             id="org.eclipse.fordiac.ide.ui.AnyBitConnectionConnectorColor"
             label="%FordiacPreferencePage_LABEL_AnyBitConnectorColor"
             value="130, 163, 169">
       </colorDefinition>
       <colorDefinition
             categoryId="org.eclipse.fordiac.ide.themeCategory"
             id="org.eclipse.fordiac.ide.ui.AnyIntConnectionConnectorColor"
             label="%FordiacPreferencePage_LABEL_AnyIntConnectorColor"
             value="24, 81, 158">
       </colorDefinition>
       <colorDefinition
             categoryId="org.eclipse.fordiac.ide.themeCategory"
             id="org.eclipse.fordiac.ide.ui.AnyRealConnectionConnectorColor"
             label="%FordiacPreferencePage_LABEL_AnyRealConnectorColor"
             value="219, 180, 24">
       </colorDefinition>
       <colorDefinition
             categoryId="org.eclipse.fordiac.ide.themeCategory"
             id="org.eclipse.fordiac.ide.ui.AnyStringConnectionConnectorColor"
             label="%FordiacPreferencePage_LABEL_AnyStringConnectorColor"
             value="189, 134, 99">
       </colorDefinition>
       <colorDefinition
             categoryId="org.eclipse.fordiac.ide.themeCategory"
             id="org.eclipse.fordiac.ide.ui.DataConnectionConnectorColor"
             label="%FordiacPreferencePage_LABEL_DataConnectorColor"
